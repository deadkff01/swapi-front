{
  "name": "swapi-front",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "react-transition-group": "^4.4.1",
    "styled-components": "^5.2.1",
    "use-http": "^1.0.16",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "build:css": "postcss src/static/css/tailwind.css -o src/static/css/index.css",
    "watch:css": "postcss src/static/css/tailwind.css -o src/static/css/index.css",
    "start": "yarn watch:css && react-scripts start",
    "build": "yarn build:css && react-scripts build",
    "test": "react-scripts test --silent",
    "eject": "react-scripts eject",
    "test:coverage": "react-scripts test --coverage --silent"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/reportWebVitals.js",
      "!src/Routes.js"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.0.4",
    "msw": "^0.24.1",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^2.0.1"
  }
}
